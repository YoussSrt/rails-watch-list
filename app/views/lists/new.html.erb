<div class="container mt-4">

  <h1 class="mb-4 text-center">Create Your New Movie List</h1>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card p-4 shadow-sm">
        <%= simple_form_for(@list) do |f| %>
          <div class="mb-3">
            <%= f.input :name, label: "List Name", input_html: { class: "form-control" } %>
          </div>
          <div class="d-grid gap-2">
            <%= f.submit "Create Your List", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Back to lists", lists_path, class: "btn btn-success" %>
  </div>

</div>
