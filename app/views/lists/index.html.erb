<div class="banner mt-4">
  <div class="overlay">
    <h1 class="display-4 text-white text-center">Welcome to Your Movie Lists!</h1>
    <p class="lead text-white text-center">Create, organize, and explore your favorite movie collections.</p>
  </div>
</div>

<div class="mt-4 mb-4">
  <h1 class="text-center mb-4">Explore Your Lists</h1>

<div class="row g-3"> <!-- Ajoute un espacement entre les colonnes -->
<% @lists.each do |list| %>
  <div class="col-md-4 mb-4"> <!-- Ajoute une marge en bas de chaque colonne -->
    <div class="card h-100 shadow-sm"> <!-- Ajoute une ombre de taille large -->
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to list.name, list_path(list), class: "stretched-link text-decoration-none" %>
        </h5>
        <p class="card-text">Number of bookmarks: <%= list.bookmarks.count %></p>
        <div class="btn-group">
          <%= link_to "Show", list_path(list), class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<div class="text-center mt-4">
<%= link_to "Create a new list", new_list_path, class: "btn btn-success" %>
</div>
